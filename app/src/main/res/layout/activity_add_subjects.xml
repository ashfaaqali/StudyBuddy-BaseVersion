<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/required_attendance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="10dp"/>
                        <ImageView
                            android:id="@+id/select_time1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toEndOf="@id/required_attendance1"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/time"
                            android:backgroundTint="@android:color/transparent"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="10dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/required_attendance2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="Required Attendance"
                            android:background="@drawable/edit_text_bg"
                            android:drawableEnd="@drawable/percent"
                            android:layout_margin="10dp"
                            android:padding="10dp"
                            android:drawablePadding="10dp"
                            android:elevation="10dp"/>
                        <ImageView
                            android:id="@+id/select_time2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_toEndOf="@id/required_attendance2"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/time"
                            android:backgroundTint="@android:color/transparent"/>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
