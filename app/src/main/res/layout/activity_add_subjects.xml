<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="3dp"/>
                    <EditText
                        android:id="@+id/required_attendance1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="3dp"/>
                    <EditText
                        android:id="@+id/required_attendance2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="3dp"/>
                    <EditText
                        android:id="@+id/required_attendance3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="3dp"/>
                    <EditText
                        android:id="@+id/required_attendance4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="3dp"
                android:backgroundTint="@color/grey">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <EditText
                        android:id="@+id/subject_name5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Subject Name"
                        android:background="@drawable/edit_text_bg"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:elevation="3dp"/>
                    <EditText
                        android:id="@+id/required_attendance5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="Required Attendance"
                        android:background="@drawable/edit_text_bg"
                        android:drawableEnd="@drawable/percent"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:elevation="3dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/add_another_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Add another subject"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#0083E8"
        android:padding="10dp"
        android:layout_margin="15dp"/>
    <Button
        android:id="@+id/add_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:backgroundTint="@null"
        android:background="@drawable/button" />

</LinearLayout>